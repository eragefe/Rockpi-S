/dts-v1/;
/plugin/;

/ {
        compatible = "radxa,rockpis", "rockchip,rk3308";

	fragment@0 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
				#size-cells = <0>;
				status = "okay";

			codec1: pcm5122@4d {
				#sound-dai-cells = <0>;
				compatible = "ti,pcm5122";
				reg = <0x4d>;
				status = "okay";
			};

			codec2: pcm5122@4c {
				#sound-dai-cells = <0>;
				compatible = "ti,pcm5122";
				reg = <0x4c>;
				status = "okay";
			};
		};
	};

        fragment@1 {
                target = <&i2s_8ch_0>;
                __overlay__ {
                        #sound-dai-cells = <0>;
                        rockchip,bclk-fs = <64>;
                        status = "okay";
                        };
                };

        fragment@2 {
                target = <&i2s_8ch_2>;
                __overlay__ {
                        #sound-dai-cells = <0>;
                        status = "disabled";
                        };
                };

        fragment@3 {
                target-path = "/";
                __overlay__ {
                        pcm5102a {
                                status = "disabled";
                                };

		        sound {

			compatible = "simple-audio-card";
			simple-audio-card,format = "i2s";
			simple-audio-card,mclk-fs = <0x100>;
			simple-audio-card,name = "dac";

			simple-audio-card,dai-link@1 {
                        format = "i2s";

                        cpu {
                                sound-dai = <&i2s_8ch_0>;
                        };

                        codec {
                                sound-dai = <&codec1 &codec2>;
                        };
                };
        };
                };
       };
};
};
